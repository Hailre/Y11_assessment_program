WindowManager:
    FirstWindow:
    SecondWindow:


<FirstWindow>:
    name: "menu"

    BoxLayout:
        orientation: "vertical"
        padding: 100, 50
        GridLayout:
            cols:1

        Label:
            text:"Flash Cards"
            font_size: 72

        Button:
            text: "Create Collection"
            font_size: 32
            on_release:
                app.root.current = "createcollection"
                root.manager.transition.direction = "left"

        Button:
            text: "Previous Collection"
            font_size: 32
            on_release:


        Button:
            text: "Exit Application"
            font_size: 32
            on_release: quit()

<SecondWindow>:
    name: "createcollection"

    untranslatedword: word
    translatedword: translation
    hints: hint

    FloatLayout:
        cols:2

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create Collection"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Word: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: word
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Translation: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: translation
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Add Hint: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: hint
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4


        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()
